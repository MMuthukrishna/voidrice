#!/usr/bin/env sh

case $BLOCK_BUTTON in
	#1) notify-send "ðŸ§  Memory hogs "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=%mem | awk 'BEGIN{FS=OFS=" "}{a[$1]+=$2}END{ for (i in a) print i,a[i]}' | sort -t " " -rnk2 | head | column -t)" ;;
	3) notify-send "ðŸ§  Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs." ;;
esac

free -h | awk '/^Mem:/ {print $3 "/" $2}'
