#!/usr/bin/env sh

case $BLOCK_BUTTON in
	#1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)" ;;
	1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | awk 'BEGIN{FS=OFS=" "}{a[$1]+=$2}END{ for (i in a) print i,a[i]}' | sort -t " " -rnk2 | head | column -t)" ;;

	3) notify-send "ðŸ–¥ CPU module " "\- Shows CPU temperature.
- Click to show intensive processes.
- % is of single core." ;;
esac

sensors | awk '/temp1/ {print $2 $3}'
